{
    "text": "Dear patient {name}, you are about to die, take some {choice} and some {pick} and see me on the {list}",
    "placeholders": {
        "name": {
            "type": "text",
            "display": "Name"
        },
        "message": {},
        "choice":{
            "type": "radio",
            "options":[
                {"key": "1", "value": "one"},
                {"key": "2", "value": "two"}
            ]
        },
        "list": {
            "type": "checkbox",
            "options":[
                {"key": "First"},
                {"key": "Second", "value": "2nd"},
                {"key": "Third"}                
            ]
        },
        "pick":{
            "type": "dropdown",
            "display": "Fruit",
            "options":[
                {"key": "Apple", "value": "apple"},
                {"key": "Orange"},
                {"key": "Banana"}
            ]
        }
        
    }
}