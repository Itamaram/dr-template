{
    "pattern": "Dear patient {name}, you are about to die, take some {choice} and some {pick} and see me on the {list} {conditional}",
    "variables": {
        "name": {
            "type": "text",
            "display": "Name"
        },
        "choice": {
            "type": "radio",
            "options": [
                {
                    "key": "1",
                    "value": "one"
                },
                {
                    "key": "2",
                    "value": "two"
                }
            ]
        },
        "conditional": {
            "type": "text",
            "display": "And then...",
            "condition": {
                "field": "choice",
                "equals": "1"
            }
        },
        "list": {
            "type": "checkbox",
            "options": [
                {
                    "key": "First"
                },
                {
                    "key": "Second",
                    "value": "2nd"
                },
                {
                    "key": "Third"
                }
            ]
        },
        "pick": {
            "type": "dropdown",
            "display": "Fruit",
            "options": [
                {
                    "key": "Apple",
                    "value": "apple"
                },
                {
                    "key": "Orange"
                },
                {
                    "key": "Banana"
                }
            ]
        }
    }
}