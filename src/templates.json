[
    {
        "name": "Patient is okay",
        "pattern": "Alright {name}, you're going to make it",
        "variables": [
            {
                "placeholder": "name",
                "type": "text",
                "display": "Name"
            }
        ]
    },
    {
        "name": "Bar Test",
        "pattern": "{color|black,bool|false,answer|no}|{color|white, bool|true, answer|yes}",
        "variables": [
            {
                "placeholder": "color",
                "type": "radio",
                "inline": "true",
                "options": [
                    {
                        "key": "black",
                        "value": "Black"
                    },
                    {
                        "key": "white",
                        "value": "White"
                    }
                ]
            },
            {
                "placeholder": "bool",
                "type": "radio",
                "options": [
                    {
                        "key": "false",
                        "value": "False"
                    },
                    {
                        "key": "true",
                        "value": "True"
                    }
                ]
            },
            {
                "placeholder": "answer",
                "type": "radio",
                "options": [
                    {
                        "key": "no",
                        "value": "No"
                    },
                    {
                        "key": "yes",
                        "value": "Yes"
                    }
                ]
            }
        ]
    },
    {
        "name": "Patient is about to die",
        "pattern": "Dear patient {name}, you are about to die, take some {choice} and some {pick} and see me on the {list} {conditional}",
        "variables": [
            {
                "placeholder": "name",
                "type": "text",
                "display": "Name",
                "default": "Bob"
            },
            {
                "placeholder": "choice",
                "type": "radio",
                "options": [
                    {
                        "key": "1",
                        "value": "one"
                    },
                    {
                        "key": "2",
                        "value": "two"
                    }
                ]
            },
            {
                "type": "title",
                "text": "This is a title"
            },
            {
                "placeholder": "conditional",
                "type": "text",
                "display": "And then...",
                "condition": {
                    "field": "choice",
                    "equals": "1"
                }
            },
            {
                "placeholder": "list",
                "type": "checkbox",
                "options": [
                    {
                        "key": "First"
                    },
                    {
                        "key": "Second",
                        "value": "2nd"
                    },
                    {
                        "key": "Third"
                    }
                ],
                "default": [
                    "First",
                    "Third"
                ]
            },
            {
                "placeholder": "pick",
                "type": "dropdown",
                "display": "Fruit",
                "options": [
                    {
                        "key": "Apple",
                        "value": "apple"
                    },
                    {
                        "key": "Orange"
                    },
                    {
                        "key": "Banana"
                    }
                ]
            }
        ]
    }
]